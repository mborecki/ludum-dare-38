{
  "transform": {
    ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "moduleDirectories": [
    "node_modules",
    "lib"
  ],
  "moduleNameMapper": {
    "phaser-ce": "<rootDir>/lib/phaser.min.js"
  }
}